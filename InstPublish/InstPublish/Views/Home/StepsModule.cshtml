@using InstPublish.Models
@model IEnumerable<Step>
<style>
 span.button30 {
        position: relative;
        z-index: 1;
        display: inline-block;
        width: 1.3em;
        height: 1.3em;
        line-height: 1.3em;
        vertical-align: middle;
        text-align: center;
        text-decoration: none;
        text-shadow: 1px 1px rgba(255, 255, 255, .3);
        font-size: 300%;
        font-weight: 900;
        color: #000;
        border-radius: 100%;
        background: rgb(144, 142, 105) linear-gradient(rgb(185, 181, 151), rgb(144, 142, 105));
        box-shadow: inset 0 -2px 1px rgba(0, 0, 0, .5), inset 0 2px 1px rgba(255, 255, 255, .9), 0 4px 4px rgba(0, 0, 0, .9);
    }

    span.button30:after {
        content: "";
        position: absolute;
        z-index: -1;
        top: 12%;
        left: 12%;
        right: 12%;
        bottom: 12%;
        border-radius: 100%;
        background: rgb(242, 203, 20) linear-gradient(rgb(242, 203, 20), rgb(255, 182, 7));
        box-shadow: inset 0 2px 1px rgba(0, 0, 0, .5), inset 0 -2px 1px rgba(255, 255, 255, .3);
    }
</style>


<div style="width: 100%;">
    <ul class="Steps">
        @foreach (var step in Model)
        {
            <li class="ui-state-default image-link"> <img src="@step.Image" style="width: 220px; height: 220px" />@step.NumberOfStep.  @step.Title</li>
        }
    </ul>
</div>

